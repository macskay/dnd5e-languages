{
    "extends": ["eslint:recommended"],
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {"max":1, "maxEOF": 1}
      ],
      "no-console": [
        "warn",
        { "allow": ["warn", "error"] }
      ],
      "no-undef": "off",
      "no-unused-vars": "warn"
    },
    "env": {
      "es6": true
    }
  }